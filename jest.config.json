{
  "preset": "react-native",
  "setupFilesAfterEnv": [
    "@testing-library/jest-native/extend-expect"
  ],
  "setupFiles": [
    "<rootDir>/jestSetup.js"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(jest-)?@?react-native|@react-native-community|@react-navigation)"
  ],
  "globals": {
    "ts-jest": {
      "isolateModules": true
    }
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}